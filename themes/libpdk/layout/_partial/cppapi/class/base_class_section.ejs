<%
let cls = "";
if (baseClasses && baseClasses.length != 0) {
    cls = "class-section-item-container baseclasses-class-section-item-container";
} else {
    cls = "uk-hidden";
}
%>
<div class="<%- cls %>">
    <h3><%= __("cppapidoc.class.base_class_section.parent_classes") %></h3>
    <table class="uk-table uk-table-responsive uk-table-small uk-table-divider">
        <tbody>
        <% for (let i in baseClasses) {
            let cls = baseClasses[i];
        %>
        <tr key={"classsectionbaseclasses"+index}>
            <td class="uk-width-1-3 uk-text-break"><a href="<%- cls.url %>"><%- cls.name %></a></td>
            <td class="uk-width-2-3">
                <% if (cls.tags && cls.tags.length > 0) { %>
                <% for (let tindex in cls.tags) {
                    let tag = cls.tags[tindex];
                %>
                <span class="uk-label uk-label-success"><%- tag %></span>
                <% } %>
                <% } %>
            </td>
        </tr>
        <% } %>
        </tbody>
    </table>
</div>