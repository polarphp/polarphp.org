                <div class="uk-flex uk-flex-column uk-width-1-1 feature-item">
                    <div class="uk-text-center"><img class="icon" src="statics/images/index/features/architecture.svg" /></div>
                    <div class="feature-title uk-text-center uk-margin-small-top"><%= __("index.feature_oop") %></div>
                    <div class="feature-desc uk-margin-small-top">
                        <%= __("index.feature_oop_desc") %>
                    </div>
                </div>
            </div>
            <div class="uk-width-1-3@s">
                <div class="uk-flex uk-flex-column uk-width-1-1 feature-item">
                    <div class="uk-text-center"><img class="icon" src="statics/images/index/features/thread.svg" /></div>
                    <div class="feature-title uk-text-center uk-margin-small-top"><%= __("index.feature_thread") %></div>
                    <div class="feature-desc uk-margin-small-top">
                        <%= __("index.feature_thread_desc") %>
                    </div>
                </div>
            </div>
            <div class="uk-width-1-3@s">
                <div class="uk-flex uk-flex-column uk-width-1-1 feature-item">
