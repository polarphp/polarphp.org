                    <div class="feature-title uk-text-center uk-margin-small-top"><%= __("index.feature_cpp11") %></div>
                    <div class="feature-desc uk-margin-small-top">
                        <%= __("index.feature_cpp11_desc") %>
                    </div>
                </div>
            </div>
            <div class="uk-width-1-3@s">
                <div class="uk-flex uk-flex-column uk-width-1-1 feature-item">
                    <div class="uk-text-center"><img class="icon" src="statics/images/index/features/opensource.svg" /></div>
                    <div class="feature-title uk-text-center uk-margin-small-top"><%= __("index.fearure_opensource") %></div>
                    <div class="feature-desc uk-margin-small-top">
                        <%= __("index.feature_opensource_desc") %>
                    </div>
                </div>
            </div>
        </div>
    </div>
