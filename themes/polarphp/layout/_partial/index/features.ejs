                    <div class="feature-title uk-text-center uk-margin-small-top"><%= __("index.feature_performance") %></div>
                    <div class="feature-desc uk-margin-small-top">
                        <%= __("index.feature_performance_desc") %>
                    </div>
                </div>
            </div>
