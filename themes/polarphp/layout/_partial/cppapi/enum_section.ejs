<%
let cls = "";
if (enums.length != 0 ) {
    cls = "section-item-container enum-section-container";
} else {
    cls = "uk-hidden";
}
showSimpleName = !!showSimpleName;
%>
<div class="<%- cls %>">
    <h3 class="uk-margin-small-bottom"><%= __("cppapidoc.enum_section.enum_types") %></h3>
    <% for (let i in enums) {
        let item = enums[i];
    %>
    <div class="uk-grid-small list-item" data-uk-grid key = {"enumsection"+index}>
        <% if (item.tags.length > 0) { %>
        <div class="uk-width-1-1 uk-flex uk-flex-left">
            <% for (let tagIndex in item.tags) {
                let tag = item.tags[tagIndex];
            %>
            <span class="uk-label uk-label-success"><%- tag %></span>
            <% } %>
        </div>
        <% } %>
        <div class="uk-width-1-1 uk-width-1-4@s define">
            enum <%- item.isStrong && "class" %> <a class="uk-text-break page-scroll-trigger" href = "<%- item.url %>"><%- showSimpleName ? item.simpleName : item.name %>
            </a>
            <% if (item.underType) { %>
            <%- " : "+item.underType %>
            <% } %>
        </div>
        <div class="uk-width-1-1 uk-width-3-4@s">
            <span><%- item.briefDescription %></span>
        </div>
    </div>
    <% } %>
</div>